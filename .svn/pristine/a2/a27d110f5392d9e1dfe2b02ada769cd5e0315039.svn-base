header{
    height: 4rem;
    background-color: #36d9d6;
    padding:1rem 0;
    text-align:center;
    line-height: 4rem;
    .left{
        float: left;
        margin-left: 1rem;
        img{
            width: 1.5rem;
        }
    }
    .unset{
        margin:0 auto;
        font-size: 2rem;
        text-align: center;
        color:white;
    }
    
}
.img{
        width: 100%;
        img{
            width: 100%;
        }
    }
#salary{
    // height: 16.5rem;
    background-color: #f5f5f5;
    .top{
        height: 4.6rem;
        line-height: 4.6rem;
        color:#666666;
        background-color: #fefefe;
        border-bottom: 1.5px solid #f5f5f5;
        padding-bottom: 0.5rem;
        img{
            width: 3rem;
            margin-left: 1.5rem;
        }
         .right{
            font-size: 1.4rem;
            float:right;
            margin-right: 2rem;;
        }
        .cover{
            color:#36d9d6;
            font-size: 2rem;
        
        }
    }
    .too{
        margin-top: 0.5rem;
    }
    .center{
        // height: 6.7rem;
        padding-top: 1rem;
        background-color: white;
        p{
            width: 80%;
            margin:0 5.7rem;
            padding:0.5rem 0 1rem;
            font-size: 1.3rem;
            color:#666666;
            span{
               display: inline-block;
               width:43%;
               text-align: left;
               vertical-align: middle;
            }
        }
    }
    img{
            width: 2rem;
            margin-right: 0.5rem;
        }
        
    .book{
        background-color: white;
            padding-bottom: 1rem;
        li{
            padding-left: 2rem;
            background-color: white;
            p{
                width: 85%;
                font-size: 1.4rem;
                color:#999999;
                padding:0.5rem 0 0 0;
            }
        }
        img{
        margin-top:0.5rem;
        width: 6rem;
        }
    }   
    
}
#footer{
    height: 7rem;
    padding-top: 1rem;
    background-color: #f5f5f5;
    p{
        background-color: white;
        text-align: center;
        .max{
            display: inline-block;
            width: 70%;
            height: 4.6rem;
            background-color: #36d9d6;
            margin-top: 1.4rem;
            vertical-align: middle;
            line-height: 4.6rem;
            color:white;
            font-size: 2rem;
            img{
                width: 2.5rem;
                margin-right: 1rem;
                
            }
        }
        .min{
            display: inline-block;
            width:20%;
            height: 4.6rem;
            margin-top: 1.4rem;
            background-color: #36d992;
            margin-left: 0.5rem;
            vertical-align: middle;
            line-height: 4.6rem;
            img{
                width:4rem;
            }
        }
    }
    
}