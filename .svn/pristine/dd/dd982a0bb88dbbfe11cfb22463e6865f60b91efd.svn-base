header{
    width: 100%;
    height: 4rem;
    background-color: #36d9d6;
    padding:0.5rem 0;
    text-align:center;
    line-height: 4rem;
    .left{
        float: left;
        margin-left: 1rem;
        img{
            width: 1.5rem;
        }
    }
    .unset{
        margin:0 auto;
        font-size: 2rem;
        text-align: center;
        color:white;
    }
}
#task-status{
    ul{
        text-align: center;
        width: 90%;
        margin:0 auto;
        padding-left: 2rem;
    }
    li{
        width: 20%;
        margin:0 1rem 0 0;
        float: left;
        text-align: center;
        color:#333333;
        padding:1rem 0;
        font-size: 1.6rem;
    }
}
.cover{
    border-bottom: 1.5px solid #36d9d6;
}
#list{
    width: 100%;
    li{
        height:4.7rem;
        padding-left: 0.5rem;
        border-top: 1px solid #f5f5f5;
        padding-top: 1rem;
        .left{
            float: left;
            font-size: 1.6rem;
            color:#333333;
            span{
                font-size: 1.4rem;
                color:#999999;
            }
        }
        .right{
            float: right;
            width: 7rem;
            background-color: #36d9d6;
            line-height: 3.5rem;
            text-align: center;
            color:white;
            margin-right: 1rem;
            font-size: 1.4rem;
        }
    }
    >p{
        text-align: center;
        font-size: 3rem;
        color:#999999;
        margin-top: 10rem;
        display: none;
    }
}