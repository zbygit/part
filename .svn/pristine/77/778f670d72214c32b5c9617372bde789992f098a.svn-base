header {
  height: 4rem;
  background-color: #36d9d6;
  padding: 1rem 0;
  text-align: center;
  line-height: 4rem;
}
header .left {
  float: left;
  margin-left: 1rem;
}
header .left img {
  width: 1.5rem;
}
header .unset {
  margin: 0 auto;
  font-size: 2rem;
  text-align: center;
  color: white;
}
.img {
  width: 100%;
}
.img img {
  width: 100%;
}
#salary {
  background-color: #f5f5f5;
}
#salary .top {
  height: 4.6rem;
  line-height: 4.6rem;
  color: #666666;
  background-color: #fefefe;
  border-bottom: 1.5px solid #f5f5f5;
  padding-bottom: 0.5rem;
}
#salary .top img {
  width: 3rem;
  margin-left: 1.5rem;
}
#salary .top .right {
  font-size: 1.4rem;
  float: right;
  margin-right: 2rem;
}
#salary .top .cover {
  color: #36d9d6;
  font-size: 2rem;
}
#salary .too {
  margin-top: 0.5rem;
}
#salary .center {
  padding-top: 1rem;
  background-color: white;
}
#salary .center p {
  width: 80%;
  margin: 0 5.7rem;
  padding: 0.5rem 0 1rem;
  font-size: 1.3rem;
  color: #666666;
}
#salary .center p span {
  display: inline-block;
  width: 43%;
  text-align: left;
  vertical-align: middle;
}
#salary img {
  width: 2rem;
  margin-right: 0.5rem;
}
#salary .book {
  background-color: white;
  padding-bottom: 1rem;
}
#salary .book li {
  padding-left: 2rem;
  background-color: white;
}
#salary .book li p {
  width: 85%;
  font-size: 1.4rem;
  color: #999999;
  padding: 0.5rem 0 0 0;
}
#salary .book img {
  margin-top: 0.5rem;
  width: 6rem;
}
#footer {
  height: 7rem;
  padding-top: 1rem;
  background-color: #f5f5f5;
}
#footer p {
  background-color: white;
  text-align: center;
}
#footer p .max {
  display: inline-block;
  width: 70%;
  height: 4.6rem;
  background-color: #36d9d6;
  margin-top: 1.4rem;
  vertical-align: middle;
  line-height: 4.6rem;
  color: white;
  font-size: 2rem;
}
#footer p .max img {
  width: 2.5rem;
  margin-right: 1rem;
}
#footer p .min {
  display: inline-block;
  width: 20%;
  height: 4.6rem;
  margin-top: 1.4rem;
  background-color: #36d992;
  margin-left: 0.5rem;
  vertical-align: middle;
  line-height: 4.6rem;
}
#footer p .min img {
  width: 4rem;
}
